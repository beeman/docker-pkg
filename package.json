{
  "name": "docker-pkg",
  "version": "1.0.0",
  "description": "Run node apps in small docker containers using zeit/pkg",
  "scripts": {
    "docker-build-builder": "docker build -t beeman/docker-pkg-builder:latest ./builder",
    "docker-push-builder": "docker push beeman/docker-pkg-builder:latest",
    "docker-run-builder": "docker run -it --name docker-pkg-builder -v $(pwd):/app/ -v $(pwd)/.pkg-cache:/root/.pkg-cache --rm beeman/docker-pkg-builder:latest",
    "docker-build-runner": "docker build -t beeman/docker-pkg-runner:latest ./runner",
    "docker-push-runner": "docker push beeman/docker-pkg-runner:latest",
    "docker-run-runner": "docker run -it --name docker-pkg-runner -v $(pwd):/app/ -v $(pwd)/.pkg-cache:/root/.pkg-cache --rm beeman/docker-pkg-runner:latest"
  },
  "keywords": [],
  "author": "Bram Borggreve @beeman_nl <borggreve@gmail.com> ",
  "license": "MIT",
  "dependencies": {}
}
